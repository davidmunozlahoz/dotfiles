#!/bin/sh

# Print icon if bluetooth is active

blue=$(bluetoothctl show | grep Powered | awk '{printf $2}')

toggle_blue(){
    if [ $blue == 'yes' ]; then
        bluetoothctl power off
    else
        bluetoothctl power on
    fi
    kill -39 $(pidof dwmblocks)
}

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e bluetoothctl ;;
	2) toggle_blue ;;
	3) notify-send "ðŸ“² Bluetooth module" "\- Shows ðŸŸ¦ if bluetooth is powered on, and â¬œ otherwise.
- Left click to open bluetoothctl.
- Middle click to toggle bluetooth." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

if [ $blue == 'yes' ]; then
    echo "ðŸŸ¦"
else
    echo "â¬œ"
fi
